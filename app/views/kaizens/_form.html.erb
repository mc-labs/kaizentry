<%= form_for(@kaizen) do |f| %>
  <% if @kaizen.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@kaizen.errors.count, "error") %> prohibited this kaizen from being saved:</h2>

      <ul>
      <% @kaizen.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4">
        <%= f.fields_for :user, @kaizen.user do |users_form| %>
          <%= users_form.label :email, class: "sr-only" %>
          <div class="input-group">
            <%= users_form.text_field :email, class: "form-control", placeholder: "Email" %>
            <div class="input-group-addon">
              @mastercontrol.com
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-12">
        <%= f.label :text, class: "sr-only" %>
        <%= f.text_area :text, class: "form-control", placeholder: "Enter Kaizen here", rows: 5 %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4">
        <%= f.label :tag_list, class: "sr-only" %>
        <%= f.text_field :tag_list, class: "form-control", id:"tags", placeholder: "Tag,Tag,Tag..." %>
      </div>
    </div>
  </div>

  <%= f.submit class: "btn btn-default" %>

<% end %>
