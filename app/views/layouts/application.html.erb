<!DOCTYPE html>
<html>
<head>
  <title>Kaizentry</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
            <ul class="nav nav-pills">
              <li><%= link_to "New Kaizen", new_kaizen_path, class:"btn navbar-btn", id:"new_kaizen" %></li>
              <li><%= link_to "Show Kaizens", kaizens_path, class:"btn navbar-btn", id:"show_kaizen" %></li>
              <li><%= link_to "Show Users", users_path, class:"btn navbar-btn", id:"show_users" %></li>
              <li><%= link_to "Show Tags", tags_path, class:"btn navbar-btn", id:"show_tags" %></li>
            </ul>
        </div>
      </div>
    </div>

<div class="container">
<%= yield %>
</div>

</body>
</html>
