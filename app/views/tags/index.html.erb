<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<div class="table-responsive">
  <table class="table table-hover mytable table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Kaizens</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= link_to tag.name, tag %></td>
          <td><%= tag.kaizens.size %></td>
          <td><%= link_to 'Edit', edit_tag_path(tag), class: "btn btn-success btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
