<p id="notice"><%= notice %></p>

<h1>MasterControl Users</h1>

<div class="table-responsive">
  <table class="table table-hover table-striped table-condensed">
    <thead>
      <tr>
        <th>Email</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to "#{user.email}@mastercontrol.com", user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
